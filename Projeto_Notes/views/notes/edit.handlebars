<a href="/">Voltar</a>
<h2>Editar nota: {{ note.title }}</h2>
<form action="/notes/update" method="POST">
    <input type="hidden" name="id" value="{{note._id}}">
    <div class="mb-3">
        <label for="title" class="form-label">Título:</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="O que você pretende fazer?" value="{{ note.title}}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descrição:</label>
        <textarea class="form-control" name="description" id="description" placeholder="Decreva melhor está nota...">{{ note.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Editar nota</button>
</form>
